{
  "name": "template-mono",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "catalog": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.13",
    "typescript": "^5",
    "@types/node": "^22.13.14",
    "@cloudflare/workers-types": "^4.20251213.0",
    "elysia": "latest",
    "@elysiajs/eden": "latest",
    "@elysiajs/cors": "latest",
